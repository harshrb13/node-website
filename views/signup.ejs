<%- include("./partials/head.ejs") %>


    <%- include("./partials/navbar.ejs") %>

        <!-- signup form section  -->
        <div class="container p-md-3 p-5 m-auto">
            <div class="row">

                <div class="col-md-12 border border-3 p-4 ">
                    <form action="/signup" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-5">
                                <input type="text" class="form-control" placeholder="Name*"
                                    aria-label="First name" name="name">
                            </div>
                            <div class="col-md-6 mb-5">
                                <input type="text" class="form-control" placeholder="Surename*" aria-label="Surename"
                                    name="sureName">
                            </div>
                            <div class="col-md-6 mb-5">
                                <input type="email" class="form-control" id="inputEmail" placeholder="Email*"
                                    name="Email">
                            </div>
                            <div class="col-md-6 mb-5">
                                <input type="number" class="form-control" id="inputPassword" placeholder="Mobile no.*"
                                    name="mobileNo">
                            </div>
                            <div class="col-12 mb-5">
                                <input type="text" class="form-control" id="inputAddress" placeholder="Address"
                                    name="address">
                            </div>
                            <div class="col-md-6 mb-5">
                                <input type="password" class="form-control" id="Password" placeholder="password*"
                                    name="password">
                            </div>
                            <div class="col-md-6 mb-5">
                                <input type="password" class="form-control" id="confirmPassword"
                                    placeholder="Confirm password*" name="confirmPass">
                            </div>
                            <div class="col-12 ">
                                <button type="submit" class="btn btn-primary d-block mx-auto">Sign Up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include("./partials/footer.ejs") %>